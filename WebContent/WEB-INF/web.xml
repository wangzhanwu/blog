<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>blog</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- 登录  -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.blog.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/loginServlet</url-pattern>
  </servlet-mapping>
  
  <!-- 注册 -->
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.blog.servlet.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/registerServlet</url-pattern>
  </servlet-mapping>
  
  <!-- 校验客户名是否存在 -->
  <servlet>
    <servlet-name>CheckIsExistServlet</servlet-name>
    <servlet-class>com.blog.servlet.CheckIsExistServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CheckIsExistServlet</servlet-name>
    <url-pattern>/checkIsExistServlet</url-pattern>
  </servlet-mapping>
  
  <!-- 退出登录 -->
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.blog.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logoutServlet</url-pattern>
  </servlet-mapping>
  
  <!-- 字符编码过滤器 -->
  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>com.blog.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>